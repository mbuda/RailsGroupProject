<h1>List of users</h1>

<table class="table">
	<thread>
	 <tr>
	   <th>User</th>
	   <th>Review count</th>
	 </tr>
	</thread>

	<tbody>
	  <% @user.each do |user| %>
	    <tr>
		<td><%=link_to user.nickname, user %></td>
		<td><% user.reviews.size %> </td>
	    </tr>	
	  <% end %>
	</tbody>
</table
