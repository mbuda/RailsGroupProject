<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nickname, label: "Nickname: " %>
    <%= f.input :password, label: "Password: " %>
    <%= f.input :description, label: "Description: " %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
