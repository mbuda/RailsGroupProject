<h1>List of reviews</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th>Number of comments</th>
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.title_capital %></td>
        <td><%= review.full_description %></td>
        <td><%= review.nick%></td>
        <td><%= review.comments.size%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add new review', new_review_path %>

