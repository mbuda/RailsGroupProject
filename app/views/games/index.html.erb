<%= content_for :title, "List of games" %>
<div class="page-header">
  <h1>List of games</h1>
</div>
<div class="table-responsive table-striped">
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Number of reviews</th>
      </tr>
    </thead>

    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= link_to game.game_title, game %></td>
          <td><%= game.reviews.size %></td>
        </tr>
      <% end %>
	<%= link_to 'Add game', new_game_path %>
    </tbody>
  </table>
</div>
